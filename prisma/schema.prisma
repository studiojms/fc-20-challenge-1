generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Asset {
  id     String  @id @map("_id")
  symbol String
  Order  Order[]
}

model Order {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  assetId String @map("_assetId")
  Asset   Asset  @relation(fields: [assetId], references: [id])
  price   Float
  status  String
}
